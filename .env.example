# AI Kustomize Agent Configuration
# Copy to .env and configure

# =============================================================================
# AI Provider Configuration (choose one: gemini or azure)
# =============================================================================
AI_PROVIDER=azure  # Options: gemini, azure

# Gemini Configuration (if AI_PROVIDER=gemini)
GEMINI_API_KEY=your_gemini_api_key_here

# Azure OpenAI Configuration (if AI_PROVIDER=azure)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# =============================================================================
# Kubernetes Access (optional - uses kubeconfig by default)
# =============================================================================
# KUBECONFIG=/path/to/kubeconfig
# KUBE_CONTEXT=my-context
# KUBE_API_SERVER=https://api.cluster.example.com
# KUBE_TOKEN=eyJhbGciOiJSUzI1NiIs...

# =============================================================================
# Safety Settings
# =============================================================================
# Namespaces to exclude from modifications
EXCLUDED_NAMESPACES=kube-system,kube-public,kube-node-lease

# Require confirmation for these namespaces
PROTECTED_NAMESPACES=production,prod

# Default to dry run
DRY_RUN=true
